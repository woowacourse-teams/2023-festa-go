<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Festago" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_gray_01</item>
        <item name="android:navigationBarColor">@color/background_gray_01</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:colorBackground">@color/background_gray_01</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_gray_01</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Festago</item>
    </style>
</resources>
